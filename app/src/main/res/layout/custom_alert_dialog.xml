<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="16dp"
    app:cardElevation="10dp"
    android:layout_centerInParent="true"
    android:backgroundTint="#B689EA">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <ImageView
            android:id="@+id/delete_list_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/alert_dialog_list_delete_image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/are_you_sure_dialog"
            android:layout_below="@id/delete_list_image"
            android:id="@+id/header"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/changa_font"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_message"
            android:layout_below="@id/header"
            android:layout_centerHorizontal="true"
            android:id="@+id/dialog_message"
            android:fontFamily="@font/serif_font"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/dialog_message"
            android:layout_marginTop="10dp">

            <Button
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:background="@drawable/cancel_button"
                android:textColor="#FFFFFF"
                android:layout_marginTop="5dp"
                android:id="@+id/cancel_button"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/teko_font"/>

            <Button
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/yes_button"
                android:text="Yes"
                android:id="@+id/yes_button"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/teko_font"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>